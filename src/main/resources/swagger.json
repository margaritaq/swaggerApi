{
  "swagger": "2.0",
  "info": {
    "description": "This is a sample server to return files by id.",
    "version": "1.0.0",
    "title": "File Store"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application.json"
  ],
  "produces": [
    "application.json"
  ],
  "paths": {
    "/files/{fileId}": {
      "get": {
        "tags": [
          "files"
        ],
        "operationId": "makeFileById",
        "summary": "Make file by given id",
        "parameters": [
          {
            "name": "fileId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/File"
            }
          },
          "400": {
            "description": "bad_request_technical",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "401": {
            "description": "unauthorized",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "403": {
            "description": "forbidden",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "404": {
            "description": "resource_not_found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "422": {
            "description": "bad_request_functional",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "500": {
            "description": "api_in_troubles",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "503": {
            "description": "api_under_maintenance",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "File": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "description": "Name of the generated file",
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "Error": {
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "description": "An integer coding the error type",
          "type": "integer"
        },
        "message": {
          "description": "A short localized string that describes the error.",
          "type": "string"
        }
      }
    }
  }
}